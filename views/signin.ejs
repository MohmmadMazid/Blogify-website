<%- layout("./layouts/boilerplate.ejs") -%>

<style>
  .form {
    margin-top: 2rem;
    border: 1px solid rgb(245, 238, 238);
    background-color: white;
    border-radius: 1rem;
    box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.5);
  }
  .text-center {
    background-color: #322c2b;
    color: white;
    margin-bottom: 2rem;
    padding: 1rem;
    border-radius: 0.5rem;
  }
  .signinBtn {
    background-color: #2a6856 !important;
  }

  /* Extra responsiveness  at mobile time */
  @media (max-width: 768px) {
    .form {
      margin-top: 1rem;
      padding: 1rem !important;
    }
  }
</style>

<div class="container my-4">
  <form
    action="/user/signin"
    method="post"
    class="form p-4 mx-auto col-lg-6 col-md-8 col-sm-10"
  >
    <h1 class="text-center"><b>Sign In</b></h1>
    <div class="row">
      <div class="mb-3 col-12">
        <label for="username" class="form-label"><b>Username</b></label>
        <input
          type="text"
          class="form-control"
          id="username"
          name="username"
          required
        />
      </div>
      <div class="mb-3 col-12">
        <label for="exampleInputPassword1" class="form-label"
          ><b>Password</b></label
        >
        <input
          type="password"
          class="form-control"
          id="exampleInputPassword1"
          name="password"
          required
        />
      </div>
      <div class="col-12">
        <button type="submit" class="btn signinBtn btn-secondary offset-3 w-50">
          <b>Submit</b>
        </button>
      </div>
    </div>
  </form>
</div>
