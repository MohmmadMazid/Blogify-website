<style>
  /* Navbar Base */
  .navbar {
    background: linear-gradient(90deg, #0c8063, #08976f);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease-in-out;
  }

  /* Brand Logo */
  .navbar .navbar-brand {
    font-size: 2rem;
    font-weight: bold;
    background: linear-gradient(45deg, #ff3c3c, #ff7f50);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    letter-spacing: 2px;
    transition: transform 0.3s ease;
  }
  .navbar .navbar-brand:hover {
    transform: scale(1.1);
  }

  /* Links */
  .navbar a {
    color: #f1f1f1 !important;
    font-weight: 500;
    position: relative;
    transition: color 0.3s ease;
  }
  .navbar a:hover {
    color: #ffd369 !important;
  }

  /* Active Link Indicator */
  .navbar a.active::after {
    content: "";
    position: absolute;
    width: 50%;
    height: 3px;
    background: #ffd369;
    left: 25%;
    bottom: 0;
    border-radius: 2px;
  }

  /* Toggler */
  .navbar-toggler {
    border: none;
    background: #ffd369;
    border-radius: 5px;
  }
  .navbar-toggler:focus {
    box-shadow: none;
  }

  /* Responsive Alignment */
  @media (max-width: 991px) {
    .navbar-nav .nav-link {
      margin: 5px 0;
      padding: 10px;
      border-radius: 8px;
      background: rgba(255, 255, 255, 0.05);
    }
    .navbar-nav .nav-link:hover {
      background: rgba(255, 255, 255, 0.15);
    }
  }
</style>

<nav class="navbar navbar-expand-lg sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Blogify</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <i class="fa-solid fa-bars"></i>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link active fs-5" aria-current="page" href="/user/home"
          >Home</a
        >
        <a class="nav-link fs-5" href="/add_blogs">Add-blog</a>
      </div>
      <div class="navbar-nav ms-auto">
        <% if(currentUser){ %>
        <a class="nav-link fs-5" href="/user/<%= currentUser._id %>">
          <i class="fa-solid fa-user"></i>
        </a>
        <a class="nav-link fs-5" href="/user/blogs/<%= currentUser._id %>"
          >Your Blogs</a
        >
        <a class="nav-link fs-5" href="/user/logout">Logout</a>
        <%} %> <%if(!currentUser) { %>
        <a class="nav-link fs-5" href="/user/signin">Signin</a>
        <a class="nav-link fs-5" href="/user/signup">Signup</a>
        <%} %>
      </div>
    </div>
  </div>
</nav>
